package domain

class Customer(
    @Summary
        var name: string,
        val email: string,
        password: string
) {

    priv var passwordHash = secureHash(password, null)

    static val emailIdx = Index<string, Customer>(true, c -> c.email)

        fn checkPassword(password: string) -> bool {
        return passwordHash == secureHash(password, null)
    }

}
